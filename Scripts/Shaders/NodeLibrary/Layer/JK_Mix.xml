<Node>
    <ID>JK_Mix</ID>
    <DefaultName>Mix</DefaultName>
    <Category>Layer/Custom/</Category>
    <Inputs>
        <Input Name="A" ></Input>
        <Input Name="B" ></Input>
        <Input Name="Mix"></Input>
    </Inputs>
    <Attributes>
        <Attribute Name="colorA" PrettyName="Color A" Type="color">(1.0,1.0,1.0,1)</Attribute>
        <Attribute Name="colorB" PrettyName="Color B" Type="color">(0.0,0.0,0.0,1)</Attribute>
        <Attribute Name="mixer"  PrettyName="Mix" Type="float" Min="0" Max="1">0.5</Attribute>
</Attributes>
 <Contexts>
        <Context Type="NodeGraphView">
            <Inputs>
                <Input Name="A" ><Pos>-120,-10</Pos></Input>
                <Input Name="B" ><Pos>-120,10</Pos></Input>
                <Input Name="Mix"><Pos>120,0</Pos></Input>
            </Inputs>
        </Context>
        <Context Type="GLSL">
            <Shader ShaderType='Fragment'>
                <Inputs>
                <Input Name="A" ><Default>$colorA</Default></Input>
                <Input Name="B" ><Default>$colorB</Default></Input>
                <Input Name="Mix"><Default>vec4($mixer)</Default></Input>
                </Inputs>
            </Shader>
            <Shader ShaderType='TessEvaluation'>
                <Inputs>
                <Input Name="A" ><Default>$colorA</Default></Input>
                <Input Name="B" ><Default>$colorB</Default></Input>
                <Input Name="Mix"><Default>vec4($mixer)</Default></Input>
                </Inputs>
            </Shader>
            <Shader>
                <Body><![CDATA[


    vec4 INITv4 = $colorA; INITv4 = $colorB;
    float INITf = $mixer;

    float mixMult = (#Mix.r == $mixer) ? #Mix.r : (#Mix.r * $mixer);

    Output = mix(#A,#B,mixMult);

                ]]></Body>
            </Shader>
        </Context>
    </Contexts>
</Node>

