<Node>
    <ID>JK_Transform2D</ID>
    <DefaultName>Transform Coordinates (UV)</DefaultName>
    <Category>Geometry/Custom/</Category>
    <Inputs>
        <Input Name="Coordinates" PrettyName="2D Coordinates"></Input>
        <Input Name="Scale" ></Input>
        <Input Name="Rotate" ></Input>
        <Input Name="Translate" ></Input>
    </Inputs>
    <Attributes>
        <!--===============================================================================================================-->
        <Attribute Name="WorldScale" PrettyName="Scale UV" Group="Transform Scale" Type="float">1</Attribute>
        <Attribute Name="scaleX" PrettyName="Scale U" Group="Transform Scale" Type="float" Min="0" Max="100" Logarithmic="1">1</Attribute>
        <Attribute Name="scaleY" PrettyName="Scale V" Group="Transform Scale" Type="float" Min="0" Max="100" Logarithmic="1">1</Attribute>
        <!--===============================================================================================================-->
        <Attribute Name="rotateZ" PrettyName="Rotate" Group="Transform Rotate" Type="float" Min="0" Max="360">0</Attribute>
        <!--===============================================================================================================-->
        <Attribute Name="transX" PrettyName="Translate U" Group="Transform Translate" Type="float" Min="0" Max="100" Logarithmic="1">0</Attribute>
        <Attribute Name="transY" PrettyName="Translate V" Group="Transform Translate" Type="float" Min="0" Max="100" Logarithmic="1">0</Attribute>
        <!--===============================================================================================================-->
</Attributes>
 <Contexts>
        <Context Type="NodeGraphView">
            <Inputs>
                <Input Name="Coordinates" ><Pos>0,-50</Pos></Input>
                <Input Name="Scale" ><Pos>-100,30</Pos></Input>
                <Input Name="Rotate" ><Pos>-100,0</Pos></Input>
                <Input Name="Translate" ><Pos>-100,-30</Pos></Input>
            </Inputs>
        </Context>
        <Context Type="GLSL">
            <Shader ShaderType='Fragment'>
                <Inputs>
                <Input Name="Coordinates" ><Default>vec4(State.Position,1.0)</Default></Input>
                <Input Name="Scale" ><Default>vec4( vec3($scaleX,$scaleY,1.0)*vec3($WorldScale),1.0)</Default></Input>
                <Input Name="Rotate" ><Default>vec4($rotateZ,1.0,1.0,1.0)</Default></Input>
                <Input Name="Translate" ><Default>vec4($transX,$transY,1.0,1.0)</Default></Input>
                </Inputs>
            </Shader>
            <Shader ShaderType='TessEvaluation'>
                <Inputs>
                <Input Name="Coordinates" ><Default>vec4(State.Position,1.0)</Default></Input>
                <Input Name="Scale" ><Default>vec4( vec3($scaleX,$scaleY,1.0)*vec3($WorldScale),1.0)</Default></Input>
                <Input Name="Rotate" ><Default>vec4($rotateZ,1.0,1.0,1.0)</Default></Input>
                <Input Name="Translate" ><Default>vec4($transX,$transY,1.0,1.0)</Default></Input>
                </Inputs>
            </Shader>
            <Shader>
                <Body><![CDATA[

    // Initialize Sliders
    float INIT = $scaleX; INIT = $scaleY; INIT = $WorldScale;
    INIT = $rotateZ; INIT = $transX; INIT = $transY;

    // 2d uv space surface position
    // build the needed vector attributes for position transform, offset max growths exponentially
    vec2 UVOffset = vec2(#Translate.x,#Translate.y);
    vec2 UVScale = vec2(#Scale.x,#Scale.y);

    // transform the position to translate,rotate,scale the position
    vec2 InputScaleUV = relUVTransform(State.UV,#Rotate.r,UVOffset,UVScale,0.5,0.5);

    Output =  vec4(InputScaleUV,0.0,1.0);

                ]]></Body>
            </Shader>
        </Context>
    </Contexts>
</Node>

