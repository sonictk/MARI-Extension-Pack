<Node>
  <ID>IllegalColorWarning</ID>
      <DefaultName>Illegal Albedo Warning</DefaultName>
    <Category>/Custom/</Category>
  <Inputs>
    <Input Name="Albedo"></Input>
  </Inputs>
  <Tags>
    <Tag>_adjustment</Tag>
  </Tags>
  <Attributes>
    <Attribute Name="color" PrettyName="Warning Color" Group="Color" Type="color" Min="(0,0,0,1)" Max="(1,1,1,1)" Description="Color A">(0,1,0.78,1)</Attribute>
    <Attribute Name="Upperbound" Group="Upper/Lower Bound" Description="Upperbound of the albedo color.\nValues above this upperbound will be warned." Type="double" Min="0.0" Max="1.0">0.97</Attribute>
    <Attribute Name="Lowerbound" Group="Upper/Lower Bound" Description="Lowerbound of the albedo color.\nValues above this lowerbound will be warned." Type="double" Min="0.0" Max="1.0">0.03</Attribute>
    <Attribute Name="blink" Group="Blink Settings" PrettyName="Blink Interval (sec)" Description="Blink interval in seconds" Type="int" Min="0" Max="200">5</Attribute>
    <Attribute Name="blinkFade" Group="Blink Settings" PrettyName="Blink Fadeout (msec)" Description="Blink fadeout in msec" Type="int" Min="0" Max="200">20</Attribute>



  </Attributes>
      <Tags>
        <Tag>_notcacheable</Tag>
        <Tag>_notbakeable</Tag>
    </Tags>
  <Contexts>
        <Context Type="GLSL">
            <Shader>
                <Inputs>
                </Inputs>
                <Body><![CDATA[

                int blink = $blink * 1000;
                int msec = $blinkFade * 10;
                int SystemTimeRemainder = u_MriSystemTime % 110;
                float Alpha = 1.0 - float(u_MriSystemTime % blink) / float(msec);

                vec3 WarningColor = vec3($color.rgb);

                float Warn = float(
                           #Albedo.r>$Upperbound || #Albedo.r<$Lowerbound
                        || #Albedo.g>$Upperbound || #Albedo.g<$Lowerbound
                        || #Albedo.b>$Upperbound || #Albedo.b<$Lowerbound
                        ); 

                Output = mix(#Albedo, vec4(WarningColor,Warn), clamp(Warn*Alpha,0.0,1.0));


                ]]></Body>
            </Shader>
        </Context>
  </Contexts>
</Node>

