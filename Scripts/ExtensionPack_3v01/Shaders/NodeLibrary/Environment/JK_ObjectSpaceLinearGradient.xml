<Node>
    <ID>JK_ObjectSpaceLinearGradient</ID>
    <DefaultName>Object Space Linear Gradient (Centered) </DefaultName>
    <Category>Environment/Extension Pack/</Category>
    <Inputs>
    </Inputs>
     <Attributes>
        <Attribute Name="Start" Group="" Type="float" Min="0.0" Max="1.0">0.0</Attribute>
        <Attribute Name="End" Group="" Type="float" Min="0.0" Max="1.0">1.0</Attribute>
        <Attribute Name="Crush" Group="" Type="float" Min="-0.5" Max="0.5">.0</Attribute>
        <Attribute Name="Map" Group="" Type="curve"> </Attribute>
        <Attribute Name="colorA" PrettyName="Color A" Group="Color" Type="color" Min="(0,0,0,1)" Max="(1,1,1,1)">(1,1,1,1)</Attribute>
        <Attribute Name="colorB" PrettyName="Color B" Group="Color" Type="color" Min="(0,0,0,1)" Max="(1,1,1,1)">(0,0,0,1)</Attribute>
        <Attribute Name="Inverse" PrettyName="Inverse" Group="Color" Type="bool">false</Attribute>
        <Attribute Name="rotX" PrettyName="X" Group="Axis" Type="float" Min="-1.0" Max="1.0">0.0</Attribute>
        <Attribute Name="rotY" PrettyName="Y" Group="Axis" Type="float" Min="-1.0" Max="1.0">1.0</Attribute>
        <Attribute Name="rotZ" PrettyName="Z" Group="Axis" Type="float" Min="-1.0" Max="1.0">0.0</Attribute>
        <Attribute Name="translate" PrettyName="Translate" Group="Offset along Axis" Type="float" Min="-1000.0" Max="1000.0">0.0</Attribute>
        <Attribute Name="offset" PrettyName="Offset" Group="Offset along Axis" Type="float" Min="-100.0" Max="100.0">0.0</Attribute>
    </Attributes>
    <Contexts>
        <Context Type="NodeGraphView">
        </Context>
        <Context Type="GLSL">
            <Shader>
                <Body><![CDATA[
#if defined MRI_SHADER_FRAGMENT || defined MRI_SHADER_TESS_EVALUATION
        vec3 N = -vec3($rotX,$rotY,$rotZ);
        vec3 position = positionTransform(State.Position,(vec3($translate+u_MriObjectCenter.x+$offset,$translate+u_MriObjectCenter.y+$offset,$translate+u_MriObjectCenter.z+$offset)),vec3(0),vec3(1.0));
        vec3 P = u_MriObjectCenter;
        float d = -dot(N,P);
        float D = (dot(N,position)+d)/length(P+u_MriObjectRadius);
        D = (D-($Start+$Crush))/(($End-$Crush)-($Start+$Crush));
        Output = mix( mix($colorB,$colorA,float($Inverse)) ,mix($colorA,$colorB,float($Inverse)),mriCurveLookup($Map,D));
#endif
                ]]></Body>
            </Shader>
        </Context>
    </Contexts>
</Node>
