<Node>
    <ID>JK_RGB2HSL</ID>
    <DefaultName>RGB to HSL</DefaultName>
    <Category>Filter/Extension Pack/Utils/</Category>
    <Tags>
        <Tag>_adjustment</Tag>
    </Tags>
    <Inputs>
        <Input Name="Input"></Input>
    </Inputs>
    <Attributes>
    </Attributes>
    <Contexts>
        <Context Type="NodeGraphView">
            <Inputs>
                <Input Name="Input"><Pos>0,-50</Pos></Input>
            </Inputs>
        </Context>
        <Context Type="GLSL">
            <Shader>
                <Inputs>
                    <Input Name="Input"><Default>vec4(1,1,1,1)</Default></Input>
                </Inputs>
                <Body><![CDATA[

                Output = mriRgb2Hsl(#Input);
                Output.a = #Input.a;

                ]]></Body>
            </Shader>
        </Context>
    </Contexts>
</Node>
