<Node>
    <ID>JK_RegionSplitter_Metal</ID>
    <DefaultName>Region Output (MetalRough)</DefaultName>
    <Category>Material Regions/Metal-Rough/</Category>
    <Inputs>
        <Input Name="IN_A" PrettyName="Input A"/>
        <Input Name="IN_B" PrettyName="Input B"/>
        <Input Name="IN_C" PrettyName="Input C"/>
    </Inputs>
    <Outputs>
        <Output Name="baseColor" PrettyName="Out BaseColor"/>
        <Output Name="roughness" PrettyName="Out Roughness"/>
        <Output Name="metalness" PrettyName="Out Metal"/>
        <Output Name="specular" PrettyName="Out F0Specular"/>
        <Output Name="height" PrettyName="Out Height"/>
        <Output Name="normal" PrettyName="Out Normal"/>
    </Outputs>
    <Attributes>
    </Attributes>

 <Contexts>
        <Context Type="NodeGraphView">
            <Inputs>
                <Input Name="IN_A"><Pos>-170,-40</Pos></Input>
                <Input Name="IN_B"><Pos>-170,-20</Pos></Input>
                <Input Name="IN_C"><Pos>-170,20</Pos></Input>
            </Inputs>

            <Outputs>
                <Output Name="baseColor"><Pos>170,-60</Pos></Output>
                <Output Name="roughness"><Pos>170,-40</Pos></Output>
                <Output Name="metalness"><Pos>170,-20</Pos></Output>
                <Output Name="specular"><Pos>170,20</Pos></Output>
                <Output Name="height"><Pos>170,40</Pos></Output>
                <Output Name="normal"><Pos>170,60</Pos></Output>
            </Outputs>

        </Context>
        <Context Type="GLSL">
            <Shader ShaderType='Fragment'>
                <Inputs>
                <Input Name="IN_A"><Default>vec4(1.0)</Default></Input>
                <Input Name="IN_B"><Default>vec4(1.0)</Default></Input>
                <Input Name="IN_C"><Default>vec4(1.0)</Default></Input>
                </Inputs>

            </Shader>
            <Shader>
                <Body><![CDATA[


            baseColor = #IN_A;
            roughness = vec4(#IN_B.r,#IN_B.r,#IN_B.r,1.0);
            metalness = vec4(#IN_B.g,#IN_B.g,#IN_B.g,1.0);
            specular = vec4(#IN_B.a,#IN_B.a,#IN_B.a,1.0);
            height = vec4(#IN_B.b,#IN_B.b,#IN_B.b,1.0);
            normal = #IN_C;


                ]]></Body>
            </Shader>
        </Context>
    </Contexts>
</Node>

